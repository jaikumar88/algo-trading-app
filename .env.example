# Copy this file to `.env` and set your OpenAI API key (unless using mock mode)
OPENAI_API_KEY=sk-REPLACE_ME

# For local testing without calling OpenAI, enable mock mode:
# MOCK_OPENAI=true

# Telegram bot token (get from BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Telegram chat ID for notifications
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Delta Exchange API credentials (India exchange)
DELTA_API_KEY=your_delta_api_key
DELTA_API_SECRET=your_delta_api_secret

# Enable/Disable live trading on Delta Exchange (set to 'true' to enable)
DELTA_TRADING_ENABLED=false

# Example exchange keys (for ccxt). Use a mock exchange or sandbox account for testing.
EXCHANGE_API_KEY=replace_me
EXCHANGE_SECRET=replace_me
